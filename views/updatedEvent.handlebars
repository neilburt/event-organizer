

    <div class="col-6">
      <h3>Update Event:</h3>
      <form class="new-event-form">
        <div class="form-group">
          <label for="event-title">Event Title:</label>
          <input class="event-title form-input" type="text" name="event-title" value="{{event.title}}" />
        </div>
        <div class="form-group">
          <label for="location">Location:</label>
          <input class="event-location form-input" type="text" name="location" value="{{event.location}}" />
        </div>
        <div class="form-group">
          <label for="details">Details:</label>
          <textarea class="event-details form-input" name="details" value="{{event.details}}"></textarea>
        </div>
        <div class="form-group">
          <label for="date">Date and Time:</label>
          <input class="event-date form-input" name="date" value="{{event.date}}" />
        </div>
        <div class="form-group">
          <label for="max_capacity">Max Capacity:</label>
          <input class="event-capacity form-input" name="max_capacity" value="{{event.max_capacity}}"/>
        </div>
        <div class="form-group">
          <button type="submit" class="updateBtn btn btn-primary" data-id="{{id}}">Bada Bing Bada Boom</button>
        </div>
      </form>
    </div>

<script src="../../../js/updatedEvent.js"></script>

