          <label for="details">Details:</label>
          <textarea class="event-details form-input" name="details"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="updateBtn btn btn-primary" data-id="{{id}}">Bada Bing Bada Boom</button>
        </div>
      </form>
    </div>

